class Solution {
  public:
    bool arraySortedOrNot(int arr[], int n) {
        /*if(n==1)return true;
        bool restArray=arraySortedOrNot(arr+1,n-1);
        return( arr[0]<= arr[1]&&restArray);*/
        for(int i=1;i<n;i++){
            if(arr[i]>=arr[i-1]){
                return true;
                
            }
            else{
                return false;
            }
        }
        
    }
};
